<Dialog xmlns="sap.m" title="New ToDo">
	<FlexBox direction="Row" alignItems="Start" justifyContent="SpaceBetween">
		<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
			<TextArea width="100%" value="" rows="2"/>
			<Label text="Due Date"/>
			<DatePicker value="{path:'', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', UTC: true}}" />
		</VBox>
	</FlexBox>
	<beginButton>
		<Button text="Save" type="Emphasized" press="fnSave"/>
	</beginButton>
	<endButton>
		<Button text="Cancel" press=".fnClose"/>
	</endButton>
</Dialog>